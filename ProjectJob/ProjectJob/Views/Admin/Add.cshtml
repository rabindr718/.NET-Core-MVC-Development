@{
}
@model ProjectJob.Models.AddAdminViewModel
<h3>Add New User</h3>
<div>

	<form method="post">
		<div>
			<label>Name</label>
			<input type="text" asp-for="Name" placeholder="Enter Name" />
		</div>
		<div>
			<label>Phone</label>
			<input type="text" asp-for="Phone" placeholder="Enter Phone" />
		</div>
		<div>
			<label>Email</label>
			<input type="text" asp-for="Email" placeholder="Enter Email" />
		</div>
		<div>
			<label>Address</label>
			<input type="text" asp-for="Address" placeholder="Enter Address" />
		</div>
		<div>
			<p>Role:</p>
			<input type="radio" asp-for="IsRole" value="Admin" /> Admin
			<input type="radio" asp-for="IsRole" value="User" /> User
		</div>
		<div>
			<button class="submitbtn" type="submit">Submit</button>
		</div>
	</form>

</div> 